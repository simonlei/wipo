<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= @page_title || "WikiPortal" %></title>
  <%= content_tag "style", @style_additions, :type => "text/css" %>
  <%= stylesheet_link_tag 'layout' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
  <div id="Header">
    <div class="topBar">
      <div class="topBarTitle">
        <%= link_to "WikiPortal", 
          :controller => "/main",
          :action => "welcome" %>
      </div>
      <div class="searchForm">
        <form action="/jspwiki/?path=0:border:header:searchForm&amp;interface=IFormSubmitListener" style="padding: 1px; margin: 1px" method="post">
          <input value="" type="text" size="15" name="word"/>
          <input type="submit" accesskey="s" value="搜索"/>
        </form>
      </div>
      <div class="cleared">&nbsp;</div>
    </div>
    <!--
      <form class="navigation" id="navigationForm">
        <%= link_to_unless(@page && @page.title == "Home Page", "Home Page", home_url)  { content_tag('b', "Home Page", 'class' => 'navOn') } %> |
        <%= link_to_unless(@title == "All Pages", "All Pages", pages_url) { content_tag('b', "All Pages", 'class' => 'navOn') } %> |
        <%= link_to_unless(@title == "Recently Revised", "Recently Revised", recent_url) { content_tag('b', "Recently Revised", 'class' => 'navOn') } %> |
        <%= link_to("Feed", feed_url) %>
      </form>
      -->

    <div class="loginBox">
      <% if current_user.is_anonymous? %>
        <%= link_to "现在登录", :controller => "/active_rbac/login" %>
      <% else %>
        用户: <span><%= current_user.login %></span>  
        | <%= link_to "管理", :controller => "/active_rbac/my_account", :action => "change_password" %> 
        | <%= link_to "登出", :controller => "/active_rbac/login", :action => "logout" %>
      <% end %>
      | <%= link_to "注册", :controller => "/active_rbac/registration" %>
    </div>
  </div>

  <div class="cleared">&nbsp;</div>
  <p style="color: green"><%= flash[:notice] %></p>
  <div id="Content">
    <%= @content_for_layout %> 
  </div>
  <div class="cleared">&nbsp;</div>

<div id="poweredby" class="smalltext">
  Copyright &copy; 2006, <a href="mailto:SimonLei@gmail.com">SimonLei</a>
</div>
</body>
</html>

