<table cellspacing="0">
  <tr>
    <td rowspan="2">
      <%= image_tag "blog.gif", :border => 0 %>
    </td>
    <td class="smalltext"><%= @page.user.login %></td>
  </tr>
  <tr>
    <td class="pagetitle" style="text-decoration: none"><%= @page.title %></td>
  </tr>
</table>

<%= render :partial => "header" %>

<div id="SingleContent">
  <span>
    <span>
      <div style="float:right">
      </div>
      <div class="EntryDesc">本页面由 <%= @page.user.login %> 创建于 <%= time_to_str @page.created_at %> </div>
      <div class="cleared">&nbsp;</div>

      <div class="EntryContent">
        <%= markup @page %>
      </div>
    </span>
  </span>

  <div class="tabletitle" style="border: 0px">
    <a name="comments">留言</a>
  </div>
  <span>
    <% if @page.comments.size != 0 %>
    <div class="CommentBox">
      <div>
        <% @comments.each do |comment| %>
        <div class="CommentDesc"> 
          <%= comment.user.login %> 留言于 <%= time_to_str comment.created_at%>。</div>
          <div class="CommentContent">
            <%= comment.comment %>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </span>

  <div class="add-comment">
    请写下您的留言
    <%= form_tag :action => "comment", :id => @page.id %>
      <%= text_area "comment", "comment", "cols"=>60, "rows"=>5 %><br/>
      <%= submit_tag "添加" %>
    </form>
  </div>
</div>


</div>




